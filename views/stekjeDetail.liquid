{% render 'partials/head.liquid' %}


    {% render 'partials/nav.liquid' %}


<main>
    <header class="page-header">
        <h1>{{ stekje.naam }}</h1>
    </header>
    <section class="stekje-overview">
        <h2>{{ stekje.naam }}</h2>

        {% if stekje %}
        <div class="stekje-container">
            <div class="stekje-media">
                <picture>
                    <!-- AVIF -->
                    <source
                        type="image/avif"
                        srcset="
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=avif&width=400 400w,
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=avif&width=800 800w
                        "
                        sizes="(max-width: 600px) 100vw, 50vw"
                    >
                    <!-- WebP -->
                    <source
                        type="image/webp"
                        srcset="
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=webp&width=400 400w,
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=webp&width=800 800w
                        "
                        sizes="(max-width: 600px) 100vw, 50vw"
                    >
                    <!-- Fallback -->
                    <img
                        src="https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?width=400"
                        srcset="
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?width=400 400w,
                            https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?width=800 800w
                        "
                        sizes="(max-width: 600px) 100vw, 50vw"
                        width="290"
                        height="390"
                        alt="{{ stekje.naam }}"
                        loading="lazy"
                        style="background: #969494;"
                    >
                </picture>
            </div>

            <div class="stekje-info">
                <div class="info-item">
                    <strong>Beschrijving:</strong>
                    <p>{{ stekje.beschrijving }}</p>
                </div>

                <div class="info-item">
                    <strong>Land van herkomst:</strong>
                    <p>{{ stekje.land_van_herkomst }}</p>
                </div>

                <div class="info-item">
                    <strong>Onderhoud:</strong>
                    <p>{{ stekje.onderhoud }}</p>
                </div>

                <div class="info-item">
                    <strong>Zonlicht:</strong>
                    <p>{{ stekje.zonlicht }}</p>
                </div>

                <div class="info-item">
                    <strong>Watergeven:</strong>
                    <p>{{ stekje.watergeven }}</p>
                </div>

                <div class="info-item">
                    <strong>Voeding:</strong>
                    <p>{{ stekje.voeding }}</p>
                </div>

                <div class="info-item">
                    <strong>Verpotten:</strong>
                    <p>{{ stekje.verpotten }}</p>
                </div>

                <div class="info-item">
                    <strong>Temperatuur:</strong>
                    <p>{{ stekje.temperatuur }}</p>
                </div>

                <div class="info-item">
                    <strong>Giftig voor huisdieren:</strong>
                    <p>{{ stekje.giftig }}</p>
                </div>
            </div>
        </div>
        {% else %}
        <p>Er zijn momenteel geen stekjes beschikbaar.</p>
        {% endif %}
    </section>
</main>
